{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Open TicTacToe (index.html)",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy","Bypass","-Command",
        "Start-Process '""${workspaceFolder}""/index.html'"
      ],
      "problemMatcher": []
    },
    {
      "label": "Serve TicTacToe",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy","Bypass","-File","server.ps1"],
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "label": "Start + Open (server)",
      "type": "shell",
      "command": "powershell",
      "args": ["-ExecutionPolicy","Bypass","-File","server.ps1"],
      "group": "build",
      "problemMatcher": []
    }
  ]
}
