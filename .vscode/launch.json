{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug index.html (Edge)",
      "type": "msedge",
      "request": "launch",
      "file": "${workspaceFolder}/index.html"
    },
    {
      "name": "Serve + Debug (Edge)",
      "type": "msedge",
      "request": "launch",
      "url": "http://localhost:8080",
      "preLaunchTask": "Serve TicTacToe",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Serve + Debug (Chrome)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8080",
      "preLaunchTask": "Serve TicTacToe",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "Start Server + Edge Debug",
      "configurations": ["Serve + Debug (Edge)"]
    },
    {
      "name": "Start Server + Chrome Debug",
      "configurations": ["Serve + Debug (Chrome)"]
    }
  ]
}
